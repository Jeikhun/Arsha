@model PortfolioCategory
<form action="/admin/portfoliocategorymethod/update" method="post">
    <div class="mb-3 col-md-6">
        <label for="portfoliotype" class="form-label">Type</label>
        <input class="form-control"
               type="type"
               asp-for="@Model.Type"
               placeholder="@Model.Type" />
        @Html.AntiForgeryToken()

    </div>
    <button asp-route-id="@Model.Id" type="submit">Save</button>
</form> 