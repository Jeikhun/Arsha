@model List<Service>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Text</th>
                <th>Created Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
                @foreach(var item in Model)
                {
            <tr >
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Image</td>B
                <td>@item.Text</td>
                <td>@item.CreatedTime</td>
					<td><a asp-controller="create" asp-action="updateservice" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"><i></i></a></td>
					<td><a onclick="if(!confirm('Delete selected item?')){return false;}" asp-controller="create" asp-action="deleteservice" asp-route-id="@item.Id" class="fa-solid fa-trash-can"><i></i></a></td>
                    
                    
            </tr>
                }
            
        </tbody>
    </table>


    <form action="/admin/create/createservice" method="post" >
            <div class="mb-3 col-md-6">
                <label for="title" class="form-label">Title</label>
                <input class="form-control"
                       type="text"
                       id="title"
                       name="Title" />
                 @Html.AntiForgeryToken()
            </div>
            <div class="mb-3 col-md-6">
                <label for="image" class="form-label">Image</label>
                <input class="form-control"
                       type="text"
                       id="image"
                   name="Image" />
            @Html.AntiForgeryToken()
            </div>
            <div class="mb-3 col-md-6">
                <label for="text" class="form-label">Text</label>
                <input class="form-control"
                       type="text"
                       id="text"
                   name="Text" />
            @Html.AntiForgeryToken()
            </div>
           <button type="submit" >Save</button>
    </form> 
</div>