@model List<PortfolioCategory>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Type</th>
                <th>CreatedTime</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Type</td>
                    <td>@item.CreatedTime</td>
                    <td><a asp-controller="portfoliocategorymethod" asp-action="update" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"><i></i></a></td>
                    <td><a asp-controller="create" asp-action="deleteportfoliocategory" asp-route-id="@item.Id" class="fa-solid fa-trash-can"><i></i></a></td>

                </tr>
            }

        </tbody>
    </table>


    <form action="/admin/create/createportfoliocategory" method="post">
        <div class="mb-3 col-md-6">
            <label for="type" class="form-label">Type</label>
            <input class="form-control"
                   type="text"
                   id="type"
                   name="Type" />
        </div>
        <button type="submit">Save</button>
    </form>
</div>