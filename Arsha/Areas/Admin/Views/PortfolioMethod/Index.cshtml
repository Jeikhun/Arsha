@model List<Portfolio>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Image</th>
                <th>Category Id</th>
                <th>Created Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img src="~/assets/img/@item.Image" width="100px" style="object-fit: cover;" height="100px" ></img></td>
                    <td>@item.PortfolioCategoryId</td>B
                    <td>@item.CreatedTime</td>

                    <td><a asp-controller="portfoliomethod" asp-action="update" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"><i></i></a></td>
                    <td><a asp-controller="portfoliomethod" asp-action="delete" asp-route-id="@item.Id" class="fa-solid fa-trash-can"><i></i></a></td>

                </tr>
            }

        </tbody>
    </table>
    <button style="border: none; color: white; background-color: lightskyblue"><a asp-area="admin" asp-action="create" asp-controller="portfoliomethod">Create Portfolio</a></button>
</div>